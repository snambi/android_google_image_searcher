<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grdItem"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/tvGridItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/imgGridItem"
        android:ellipsize="end"
        android:hint="@string/hello_world"
        android:maxLines="1"
        android:minLines="1"
        android:gravity="bottom"
        android:textAlignment="gravity" >

    </TextView>

    <com.github.snambi.googleimagesearcher.SquareImage
        android:id="@+id/imgGridItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="0dp"
        android:contentDescription="search image"
        android:onClick="onClickShowFullImage"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />
    
</RelativeLayout>